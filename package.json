{
  "name": "castle-game-engine",
  "displayName": "Castle Game Engine",
  "description": "VSCode extension for Castle Game Engine",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
	"activationEvents": [
		"onLanguage:pascal",
    "onStartupFinished"
	],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
				"id": "pascal",
				"extensions": [
					".pas",
					".pp",
					".inc",
					".lpr"
				]
			}],
    "commands": [{
      "command": "castle-game-engine.helloWorld",
      "title": "Hello World"
    }],
		"configuration": {
			"type": "object",
			"title": "Pascal Language Server",
			"properties": {
				"castleGameEngine.enginePath": {
					"type": "string",
					"default": "",
					"description": "Path to the Castle Game Engine location. Leave blank to load from an environment variable (CASTLE_ENGINE_PATH)."
				}
			}
		}    
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "dependencies": {
		"vscode-languageclient": "^9.0.0"
	},
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
